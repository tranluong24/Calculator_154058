<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#E0E0E0"
        android:gravity="center_vertical|right"
        android:paddingEnd="6dp"
        android:text="Tran Dac Luong 20215611"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonCE"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="CE"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board"
        app:layout_constraintEnd_toStartOf="@+id/buttonC"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonC"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="C"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/buttonCE"
        app:layout_constraintTop_toBottomOf="@+id/board"
        app:layout_constraintEnd_toStartOf="@+id/buttonBS"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonBS"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="BS"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/board"
        app:layout_constraintEnd_toStartOf="@+id/buttonDiv"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonDiv"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="/"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/buttonBS"
        app:layout_constraintTop_toBottomOf="@+id/board"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button7"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="7"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCE"
        app:layout_constraintEnd_toStartOf="@id/button8"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button8"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="8"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonC"
        app:layout_constraintEnd_toStartOf="@id/button9"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button9"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="9"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/buttonX"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/buttonBS" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonX"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="x"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiv" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button4"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="4"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@id/button5"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button5"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="5"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@id/button6"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button6"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="6"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/buttonSub"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonSub"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonX" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button1"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="1"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@id/button2"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button2"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="2"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@id/button3"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button3"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="3"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/buttonAdd"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonAdd"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonSub" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonAD"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="+/-"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@id/button0"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/button0"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_2"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/buttonAD"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@id/buttonDot"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonDot"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="."
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/buttonS"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/cal_button_1"
        android:text="="
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDot"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />


</androidx.constraintlayout.widget.ConstraintLayout>